<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="169dp"
        android:layout_height="169dp"
        app:tint="@color/yellow"
        tools:srcCompat="@drawable/baseline_local_pizza_24" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pizza_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Pepperoni" />

        <TextView
            android:id="@+id/pizza_description"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Pepperoni is very good and big" />

        <Button
            android:id="@+id/pizza_price"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="2900" />
    </LinearLayout>

    <ImageView
        android:id="@+id/remove_pizza"
        android:layout_width="37dp"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        app:srcCompat="@drawable/baseline_delete_24" />
</LinearLayout>