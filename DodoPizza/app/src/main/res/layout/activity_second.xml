<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SecondActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7sp"
        android:fontFamily="@font/alata"
        android:text="@string/pizza"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultSize"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/armata"
            android:text="Маленькая 25cm"

            android:textSize="12sp" />
        <TextView
            android:id="@+id/resultDough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/armata"
            android:text="традиционное тето"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/resultIngredient"
        android:layout_width="358dp"
        android:layout_height="91dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/armata"
        android:text="@string/pizza1"
        android:textSize="13sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal">

            <Button
                android:id="@+id/small"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Маленкая"
                android:textSize="14dp"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/avg"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textSize="14dp"
                android:text="Средняя"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/big"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:text="Большая"
                android:textSize="14dp"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"> <!-- Радиус скругления углов, половина высоты для создания круглой формы -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="horizontal">

            <Button
                android:id="@+id/traditional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Традиционное"
                android:textSize="15dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/thin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:text="Тонкий "
                android:textSize="15dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/order"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="order" />

</LinearLayout>